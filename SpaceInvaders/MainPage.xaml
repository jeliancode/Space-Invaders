<Page x:Class="SpaceInvaders.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:SpaceInvaders"
      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
  <Canvas KeyDown="MainPage_KeyDown"
          IsTabStop="True"
          x:Name="mainCanvas"
          Height="500"
          Width="700"
          Background="Black"
          PointerPressed="MainCanvas_PointerPressed">
    
    <Grid>
      <Grid.RowDefinitions>
        <RowDefinition Height="Auto"/>
      </Grid.RowDefinitions>

      <StackPanel
        Orientation="Horizontal"
        VerticalAlignment="Top">

        <TextBlock
         Text="SCORE"
          FontSize="24"
          Foreground="GreenYellow"
          Margin="10,10,0,0"/>

        <TextBlock
          Text="0"
          x:Name="score"
          FontSize="24"
          Foreground="White"
          Margin="10,10,0,0"/>

        <TextBlock
          Text="LIVES"
          FontSize="24"
          Foreground="GreenYellow"
          Margin="200,10,10,0"
          HorizontalAlignment="Right"/>

        <StackPanel
          x:Name="imageStackPanel"
          Orientation="Horizontal"
          VerticalAlignment="Top"
          Margin="10,14,0,0">
        </StackPanel>
      </StackPanel>
    </Grid>
  </Canvas>
</Page>
